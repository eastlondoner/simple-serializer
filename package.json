{
  "name": "simple-serializer",
  "version": "0.1.1",
  "description": "A simple serialization library for classes, written in Typescript",
  "main": "lib/index.js",
  "scripts": {
    "clean": "rm -rf lib",
    "compile": "tsc",
    "compile:test": "tsc -p tsconfig.test.json",
    "prepublish": "npm run clean && npm run compile",
    "pretest": "npm run compile:test",
    "test": "mocha --reporter spec --full-trace lib/test/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joeldn/simple-serializer.git"
  },
  "keywords": [
    "serialization",
    "serialize",
    "json",
    "classes",
    "decorator",
    "typscript",
    "es7",
    "es2016"
  ],
  "author": "J. de Nes",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/joeldn/simple-serializer/issues"
  },
  "homepage": "https://github.com/joeldn/simple-serializer#readme",
  "dependencies": {
    "reflect-metadata": "^0.1.10"
  },
  "devDependencies": {
    "@types/chai": "^3.5.2",
    "@types/mocha": "^2.2.41",
    "@types/node": "^7.0.18",
    "@types/reflect-metadata": "0.0.5",
    "chai": "^3.5.0",
    "mocha": "^3.4.1",
    "tslint": "^5.2.0",
    "typescript": "^2.3.2"
  }
}
