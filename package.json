{
  "name": "simple-serializer",
  "version": "0.1.1",
  "description": "A simple serialization library for classes, written in Typescript",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc -p tsconfig-build.json",
    "test": "mocha --timeout 1000 --reporter spec --compilers ts:ts-node/register 'test/**/*.test.ts'",
    "test:watch": "mocha -w --timeout 1000 --reporter spec --compilers ts:ts-node/register 'test/**/*.test.ts'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joeldn/simple-serializer.git"
  },
  "keywords": [
    "serialization",
    "json",
    "classes",
    "decorator",
    "typscript",
    "es7"
  ],
  "author": "J. de Nes",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/joeldn/simple-serializer/issues"
  },
  "homepage": "https://github.com/joeldn/simple-serializer#readme",
  "dependencies": {
    "reflect-metadata": "^0.1.10"
  },
  "devDependencies": {
    "@types/chai": "^3.5.2",
    "@types/node": "^7.0.18",
    "@types/reflect-metadata": "0.0.5",
    "chai": "^3.5.0",
    "mocha": "^3.4.1",
    "ts-node": "^3.0.4",
    "tslint": "^5.2.0",
    "typescript": "^2.3.2"
  }
}
