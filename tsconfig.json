{
  "compilerOptions": {
    "outDir": "./lib/",
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "es5",
    "experimentalDecorators": true,
    "types": ["node"],
    "lib": ["es5"]
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
    "./test/**/*.ts"
  ],
  "compileOnSave": false
}
